---
import { MarkdocRenderer } from "astro-markdoc-renderer";
import type { Content } from "astro-markdoc-renderer";
import YouTubeEmbed from "../rendering/YouTubeEmbed.astro";
import TweetEmbed from "../rendering/TweetEmbed.astro";
import CodePenEmbed from "../rendering/CodePenEmbed.astro";
import GitHubGistEmbed from "../rendering/GitHubGistEmbed.astro";
import CodeBlock from "../rendering/CodeBlock.astro";
import Heading from "../rendering/Heading.astro";

type Props = {
	content: Content;
};

const { content } = Astro.props;

const components = {
	Heading: {
		Component: Heading,
		props: {},
	},
	CodeBlock: {
		Component: CodeBlock,
		props: {},
	},
	YouTubeEmbed: {
		Component: YouTubeEmbed,
		props: {},
	},
	TweetEmbed: {
		Component: TweetEmbed,
		props: {},
	},
	CodePenEmbed: {
		Component: CodePenEmbed,
		props: {},
	},
	GitHubGistEmbed: {
		Component: GitHubGistEmbed,
		props: {},
	},
};
---

<MarkdocRenderer content={content} components={components} />
